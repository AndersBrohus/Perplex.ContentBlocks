@using Perplex.ContentBlocks.Rendering
@using ContentModels = Umbraco.Web.PublishedModels
@model IContentBlockViewModel<ContentModels.ExampleHeader>

<h2>@Model.Content.Title</h2>
@Model.Content.Text

@if (Model.Content.More.Any())
{
    foreach(var block in Model.Content.More)
    {
        <h3>@block.Title</h3>
        @block.Text
    }
}